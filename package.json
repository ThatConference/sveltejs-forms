{
	"name": "@thatconference/sveltejs-forms",
	"description": "Declarative forms for Svelte",
	"homepage": "https://mdauner.github.io/sveltejs-forms/",
	"version": "0.0.0-development",
	"license": "MIT",
	"repository": "github:thatconference/sveltejs-forms",
	"svelte": "index.js",
	"type": "module",
	"devDependencies": {
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"@sveltejs/adapter-auto": "2.0.0",
		"@sveltejs/kit": "1.15.2",
		"@sveltejs/package": "^1.0.0-next.6",
		"@testing-library/jest-dom": "~5.11.4",
		"@testing-library/svelte": "^3.2.2",
		"@testing-library/user-event": "^14.4.3",
		"@types/jest": "~25.1.3",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^4.2.3",
		"jsdom": "^21.1.1",
		"lint-staged": "^13.2.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"sass": "^1.60.0",
		"semantic-release": "^19.0.5",
		"svelte": "^3.57.0",
		"svelte-jester": "^2.3.2",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"vitest": "^0.25.3",
		"yup": "~0.32.11"
	},
	"peerDependencies": {
		"svelte": "^3.52.0",
		"yup": "~0.28.2"
	},
	"dependencies": {
		"lodash-es": "^4.17.21",
		"svelte-writable-derived": "^3.0.1"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test": "vitest run",
		"prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
		"semantic-release": "semantic-release"
	},
	"browserslist": [
		"defaults"
	],
	"keywords": [
		"svelte",
		"forms",
		"validation",
		"javascript"
	],
	"files": [
		"src",
		"dist"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.{svelte,js}": [
			"eslint --fix",
			"git add"
		],
		"*.{svelte, html, css, scss, stylus, js, ts, json, yml, md}": [
			"prettier --write --plugin-search-dir=.",
			"git add"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	}
}
